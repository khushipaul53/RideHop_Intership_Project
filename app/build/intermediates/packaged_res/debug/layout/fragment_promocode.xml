<?xml version="1.0" encoding="utf-8"?>

                                                  

                                                

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_height="match_parent"
        android:background="@drawable/loyality_back"
        android:layout_width="wrap_content"


         android:tag="layout/fragment_promocode_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:context=".Fragment.PromocodeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.RideHop_Intership_Project">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back">

        </ImageButton>
        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Points"
            android:textColor="@color/white"
            android:textSize="29dp"
            android:textStyle="bold">

        </TextView>
    </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/tvpoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="150 Points"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@id/appbar"
        android:textSize="60dp">

    </TextView>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="200dp"
            android:textColor="@color/primaryColor"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"

            android:layout_below="@id/tvpoints"
            android:textSize="20dp">

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"

            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/button"
            android:text="Redeem"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>


         