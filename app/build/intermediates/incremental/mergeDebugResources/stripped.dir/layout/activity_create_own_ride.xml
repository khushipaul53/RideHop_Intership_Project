<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CreateOwnRideActivity">
    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/primaryColor"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.RideHop_Intership_Project">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/sideMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back">

                </ImageButton>
                <TextView
                    android:id="@+id/tv_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Offer a Ride"
                    android:textColor="@color/white"
                    android:textSize="29dp"
                    android:textStyle="bold">

                </TextView>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:background="@color/primaryColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/from"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="From: "
                        android:layout_weight=".3"
                        android:textColor="@color/SecondaryColor"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/From_searchView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColorHighlight="@color/white"
                        android:backgroundTint="@android:color/white"
                        android:layout_margin="20dp"
                        android:textColor="@color/white"

                        android:layout_weight="0.7"
                        >

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/to"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="To: "
                        android:layout_weight=".3"
                        android:textColor="@color/SecondaryColor"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/to_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColorHighlight="@color/white"
                        android:backgroundTint="@android:color/white"
                        android:layout_margin="20dp"
                        android:textColor="@color/white"

                        android:layout_weight="0.7"
                        >

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pickupFrom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Pickup Point: "
                        android:layout_weight=".3"
                        android:textColor="@color/SecondaryColor"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/et_pickup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColorHighlight="@color/white"
                        android:backgroundTint="@android:color/white"
                        android:layout_margin="20dp"
                        android:textColor="@color/white"

                        android:layout_weight="0.7"
                        >

                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvdropOff"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="DropOff Point: "
                        android:layout_weight=".3"
                        android:textColor="@color/SecondaryColor"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/et_Dropoff"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColorHighlight="@color/white"
                        android:backgroundTint="@android:color/white"
                        android:layout_margin="20dp"
                        android:textColor="@color/white"

                        android:layout_weight="0.7"
                        >

                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/datetime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Date Time "

                        android:layout_weight=".3"
                        android:textColor="@color/SecondaryColor"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etdate"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:textColorHighlight="@color/white"
                        android:backgroundTint="@android:color/white"
                        android:layout_margin="20dp"
                        android:layout_weight="0.7"
                        android:textColor="@color/white"

                        >

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSeats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Seats: "
                        android:layout_weight=".3"
                        android:textColor="@color/SecondaryColor"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etseats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColorHighlight="@color/white"
                        android:backgroundTint="@android:color/white"
                        android:layout_margin="20dp"
                        android:layout_weight="0.7"
                        android:textColor="@color/white"

                        >

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvprice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Price: "
                        android:layout_weight=".3"
                        android:textColor="@color/SecondaryColor"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <EditText
                        android:id="@+id/etprice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColorHighlight="@color/white"
                        android:backgroundTint="@android:color/white"
                        android:layout_margin="20dp"
                        android:layout_weight="0.7"
                        android:textColor="@color/white"

                        >

                    </EditText>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listStops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:layout_marginTop="20dp"
                    android:text="Create Ride"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_marginHorizontal="20dp">

                </androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>