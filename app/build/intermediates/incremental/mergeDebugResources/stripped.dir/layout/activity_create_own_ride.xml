<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  

                                                    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor" android:tag="layout/activity_create_own_ride_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".Activity.CreateOwnRideActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="From: "
                android:layout_weight=".3"
                android:textColor="@color/SecondaryColor"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <androidx.appcompat.widget.SearchView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight=".7"
                android:textSize="30dp"
                android:background="@drawable/edit_text"
                >

            </androidx.appcompat.widget.SearchView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="To: "
                android:layout_weight=".3"
                android:textColor="@color/SecondaryColor"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight=".7"
                android:textSize="30dp"
                android:background="@drawable/edit_text"
                >

            </EditText>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/datetime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Date Time "
                    android:layout_weight=".3"
                    android:textColor="@color/SecondaryColor"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight=".7"
                    android:textSize="30dp"
                    android:background="@drawable/edit_text"
                    >

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSeats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Seats: "
                    android:layout_weight=".3"
                    android:textColor="@color/SecondaryColor"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight=".7"
                    android:textSize="30dp"
                    android:background="@drawable/edit_text"
                    >

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRidesDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Details: "
                    android:layout_weight=".3"
                    android:textColor="@color/SecondaryColor"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight=".7"
                    android:textSize="30dp"
                    android:background="@drawable/edit_text"
                    >

                </EditText>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listStops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:layout_marginTop="20dp"
                android:text="Create Ride"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginHorizontal="20dp">

            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
         