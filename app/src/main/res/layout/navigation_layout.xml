<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/primaryColor">

        <LinearLayout
            android:id="@+id/nvView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_margin="20dp"
                android:layout_gravity="center">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp"
                android:textColor="@color/text_color"
                android:layout_gravity="center">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="15dp"
                android:textColor="@color/text_color"
                android:layout_gravity="center">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home"
                        android:layout_weight="1">
                    </ImageView>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:layout_weight="1">

                    </TextView>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/front_arrow"
                        android:layout_weight="1">
                    </ImageView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile"
                        android:layout_weight="1">
                    </ImageView>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:layout_weight="1">

                    </TextView>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/front_arrow"
                        android:layout_weight="1">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_Settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/settings"
                        android:layout_weight="1">
                    </ImageView>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:layout_weight="1">

                    </TextView>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/front_arrow"
                        android:layout_weight="1">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_rides"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rides"
                        android:layout_weight="1">
                    </ImageView>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="My rides"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:layout_weight="1">

                    </TextView>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/front_arrow"
                        android:layout_weight="1">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_promocode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/promocode"
                        android:layout_weight="1">
                    </ImageView>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="PromoCode"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:layout_weight="1">

                    </TextView>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/front_arrow"
                        android:layout_weight="1">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rewards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rewards"
                        android:layout_weight="1">
                    </ImageView>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rewards"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:layout_weight="1">

                    </TextView>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/front_arrow"
                        android:layout_weight="1">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="bottom"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logout"
                        android:layout_weight="1">
                    </ImageView>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:layout_weight="1">

                    </TextView>



                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

