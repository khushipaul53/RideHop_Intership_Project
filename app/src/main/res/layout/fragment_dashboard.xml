<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
       android:id="@+id/rl_layout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
    android:background="@color/primaryColor"
  >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.RideHop_Intership_Project">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/sideMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu">

    </ImageButton>
    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Find Ride"
        android:textColor="@color/white"
        android:textSize="29dp"
        android:textStyle="bold">

    </TextView>
</androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerMain"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/viewPagerMain"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:background="@drawable/curved_retangle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="From: "
                android:layout_weight=".3"
                android:textColor="@color/SecondaryColor"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColorHighlight="@color/white"
                android:backgroundTint="@android:color/white"
                android:layout_margin="20dp"
                android:layout_weight="0.7"
                android:textColor="@color/white"

                >

            </EditText>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="To:"
                android:layout_weight=".3"
                android:textColor="@color/SecondaryColor"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColorHighlight="@color/white"
                android:backgroundTint="@android:color/white"
                android:layout_margin="20dp"
                android:textColor="@color/white"

                android:layout_weight="0.7"

                >

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Date/Time"
                android:layout_weight=".3"
                android:textColor="@color/SecondaryColor"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/et_datetime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColorHighlight="@color/white"
                android:backgroundTint="@android:color/white"
                android:layout_margin="20dp"
                android:layout_weight="0.7"
                android:textColor="@color/white"


                >

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSeats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Seats:"
                android:layout_weight=".3"
                android:textColor="@color/SecondaryColor"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight=".7"

                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text">

                <Spinner
                    android:id="@+id/spType"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:autofillHints="1" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginTop="20dp"
            android:text="Search Rides"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginHorizontal="20dp">

        </androidx.appcompat.widget.AppCompatButton>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/SecondaryColor"
            app:srcCompat="@drawable/plus" />
    </LinearLayout>

</RelativeLayout>



</layout>